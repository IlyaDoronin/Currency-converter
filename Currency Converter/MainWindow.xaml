<Window x:Class="Currency_Converter.MainWindow" x:Name="MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainForm" Height="750" Width="550" Background="{x:Null}" MinWidth="550" MinHeight="750" Opacity="0.97" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Visibility="Visible" Topmost="True">
    <Window.Resources>
        <Style TargetType="Button" x:Key="TabButton">
            <Setter Property="Background" Value="Red" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="0" Background="Red" BorderThickness="0" >
                            <ContentPresenter x:Name="contentPresenter"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid MouseLeftButtonDown="DragForm" Opacity="0.97">
        <Border CornerRadius="20" Background="White"/>        
        <Grid Height="30" VerticalAlignment="Top"  Background="#147E4B" Margin="30,0,30,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            
            <Button BorderThickness="0" Grid.Column="1" Click="Settings" Style="{StaticResource TabButton}"></Button>
            <Button BorderThickness="0" Grid.Column="2" Click="TrayMinimized" Style="{StaticResource TabButton}"></Button>
            <Button BorderThickness="0" Grid.Column="3" Click="Minimized" Style="{StaticResource TabButton}"></Button>
            <Button BorderThickness="0" Grid.Column="4" Click="FullScreen" Style="{StaticResource TabButton}"></Button>
        </Grid>
        <Button x:Name="CloseForm" Width="30" Height="30" Margin="520,0,0,720" Click="Close" MouseEnter="CloseForm_MouseEnter" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button.Template>
                <ControlTemplate>
                    <Border CornerRadius="0,20,0,0" Background="Red"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Border Background="#147E4B" CornerRadius="20,0,0,0" BorderThickness="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="30" Margin="0,0,0,0"/>
    </Grid>
</Window>

