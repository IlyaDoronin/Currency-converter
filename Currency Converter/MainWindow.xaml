<Window x:Class="Currency_Converter.MainWindow" x:Name="MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:Currency_Converter"
        mc:Ignorable="d" 
        AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainForm" Height="750" Width="550"
        Background="{x:Null}" MinWidth="550"
        MinHeight="750" WindowStartupLocation="CenterScreen"
        Visibility="Visible" Activated="MainForm_Activated"
        KeyDown="MainForm_KeyDown">
    <Window.Resources>
        <Style TargetType="Button" x:Key="TabButton">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="0" Background="#2ecc71"
                                BorderThickness="0" Height="30" Width="30">
                            <ContentPresenter x:Name="contentPresenter"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid MouseLeftButtonDown="DragForm" Opacity="0.97">
        <!--Сворачивание в трей-->
        <tb:TaskbarIcon x:Name="Tray"
                        Visibility="Hidden"
                        ToolTipText="Currency converter"
                        IconSource="Resources/Logo.ico"
                        TrayLeftMouseDown="TaskbarIcon_TrayLeftMouseDown">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Курсы валют" Click="Course_Click" />
                    <MenuItem Header="Калькулятор валют" Click="Calcutator_Click" />
                    <Separator />
                    <MenuItem Header="Настройки валют" Click="Settings" />
                    <MenuItem Header="Настройки приложения" Click="AppSettings" />
                    <Separator />
                    <MenuItem Header="Выход"  Click="Close"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <Border CornerRadius="20" Background="White"/>

        <!--Верхняя панель-->
        <!--Кнопки-->
        <Border Margin="30,0,120,720"
                Height="30"
                Background="#2ecc71"
                VerticalAlignment="Top">
        </Border>
        <Button BorderBrush="Black"
                Cursor="Hand"
                Grid.Column="1" Click="Settings"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0,0,120,0"
                Style="{StaticResource TabButton}">
            <Border BorderBrush="Black" BorderThickness="1,0,0,0">
                <Label FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Money" Height="20" Width="20"/>
                </Label>
            </Border>
        </Button>
        <Button BorderBrush="Black"
                Cursor="Hand"
                Grid.Column="1" Click="AppSettings"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0,0,90,0"
                Style="{StaticResource TabButton}">
            <Border BorderBrush="Black" BorderThickness="1,0,1,0">
                <Label FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">⚙</Label>
            </Border>
        </Button>
        <Button BorderThickness="0"
                Cursor="Hand"
                Grid.Column="2" Click="TrayMinimized"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0,0,60,0"
                Style="{StaticResource TabButton}">
            <Border BorderBrush="Black" BorderThickness="0,0,1,0">
                <Grid Panel.ZIndex="1"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                      Height="30" Width="30">
                    <!--<Line X1="21" Y1="15" X2="22" Y2="22" Stroke="Black"/>
                    <Line X1="15" Y1="21" X2="22" Y2="22" Stroke="Black"/>
                    <Line X1="8" Y1="8" X2="22" Y2="22" Stroke="Black"/>-->
                    <Line X1="8" Y1="12" X2="15" Y2="18" Stroke="Black"/>
                    <Line X1="22" Y1="12" X2="15" Y2="18" Stroke="Black"/>
                </Grid>
            </Border>
        </Button>
        <Button BorderThickness="0"
                Cursor="Hand"
                Grid.Column="3"
                Click="Minimized"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0,0,30,0"
                Style="{StaticResource TabButton}">
            <Border BorderBrush="Black" BorderThickness="0,0,1,0">
                <Grid Panel.ZIndex="1"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                      Height="30" Width="30">
                    <Line X1="8" Y1="15" X2="22" Y2="15" Stroke="Black"/>
                </Grid>
            </Border>
        </Button>
        <Button x:Name="CloseForm"
                Width="30" Height="30"
                Margin="0,0,0,0" Click="Close"
                VerticalAlignment="Top"
                HorizontalAlignment="Right">
            <Button.Template>
                <ControlTemplate>
                    <Border CornerRadius="0,20,0,0" Background="#2ecc71">
                        <Grid  Panel.ZIndex="1"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Left"
                              Height="30" Width="30">
                            <Line X1="8" Y1="8" X2="22" Y2="22" Stroke="Black"/>
                            <Line X1="22" Y1="8" X2="8" Y2="22" Stroke="Black"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Border Background="#2ecc71"
                CornerRadius="20,0,0,0"
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="30" Width="30"
                Margin="0,0,0,0"/>

        <!--Таблица-->
        <Grid x:FieldModifier="public" x:Name="Loader">
            <Frame x:FieldModifier="public" x:Name="Page_Loader" NavigationUIVisibility="Hidden"/>
        </Grid>
        <!--Сюда загружаются все страницы-->
        <Grid Height="100" MaxWidth="1000" VerticalAlignment="Bottom" Background="Transparent">

            <!--Нжний кусок-->
            <Grid.RowDefinitions >
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="City" Content="{Binding Path=USD}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="18"></Label>
            <Label x:Name="Date" Grid.Column="1"
                   Content="Дата"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="18"></Label>
            <Button x:Name="Course"
                    Height="50"
                    Grid.Row="1" Grid.Column="0"
                    MaxWidth="500"
                    Click="Course_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border CornerRadius="20,0,0,20"
                                BorderThickness="0,0,1,0"
                                BorderBrush="Black"
                                Background="#2ecc71">
                            <Label
                                Foreground="Black"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="20">Курсы валют
                            </Label>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="Calcutator"
                    Height="50"
                    Grid.Row="1" Margin="0"
                    Grid.Column="1"
                    MaxWidth="500"
                    Click="Calcutator_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border 
                                CornerRadius="0,20,20,0"
                                BorderThickness="1,0,0,0"
                                BorderBrush="Black"
                                Background="#2ecc71">
                            <Label
                                Foreground="Black"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="20">Калькулятор валют
                            </Label>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>


