<Page x:Class="Currency_Converter.AppSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Currency_Converter"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="550"
      Title="Settings" FontSize="20"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.FontWeight="Regular">

    
    <Grid MaxWidth="900" 
          MaxHeight="550"
          Margin="100">
        <Label VerticalAlignment="Top"
               HorizontalAlignment="Center"
               FontSize="30"
               Margin="0,-50,0,0"
               Content="Настройки приложения"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="85*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Выбор города"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"                   
                   VerticalAlignment="Top"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"/>
            <materialDesign:ColorZone Grid.Row="0"
                                      Grid.ColumnSpan="2"
                                      Height="50" Width="200" 
                                      materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                      CornerRadius="5"
                                      Margin="0,50,0,0">
                <ComboBox Width="170"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Text="Старые дороги">
                    <ComboBoxItem>Минск</ComboBoxItem>
                    <ComboBoxItem>Брест</ComboBoxItem>
                    <ComboBoxItem>Гродно</ComboBoxItem>
                    <ComboBoxItem>Гомель</ComboBoxItem>
                    <ComboBoxItem>Витебск</ComboBoxItem>
                    <ComboBoxItem>Могилёв</ComboBoxItem>
                    <ComboBoxItem>Бобруйск</ComboBoxItem>
                    <ComboBoxItem>Борисов</ComboBoxItem>
                    <ComboBoxItem>Гомель</ComboBoxItem>
                    <ComboBoxItem>Мозырь</ComboBoxItem>
                    <ComboBoxItem>Орша</ComboBoxItem>
                    <ComboBoxItem>Полоцк</ComboBoxItem>
                    <ComboBoxItem>Речица</ComboBoxItem>
                    <ComboBoxItem>Слуцк</ComboBoxItem>
                    <ComboBoxItem>Быхов</ComboBoxItem>
                    <ComboBoxItem>Ветка</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                    <ComboBoxItem>ДАААААААА</ComboBoxItem>
                </ComboBox>
            </materialDesign:ColorZone>
            <Label Content="Тёмная тема"
                   Grid.Column="0"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>
            <ToggleButton Height="30"
                                 Grid.Column="1"
                                 Grid.Row="1"/>
            <Label Content="Автозапуск приложения в трее"
                   Grid.Column="0"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>
            <ToggleButton Height="30"
                                 Grid.Column="1"
                                 Grid.Row="2"/>
            <Label Content="Изменить иконку сворачивания в трей"
                   Grid.Column="0"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>
            <ToggleButton Height="30"
                                 Grid.Column="1"
                                 Grid.Row="3"/>
            <Label Content="Сброс настроек"
                   Background="Red"
                   Grid.Column="0"
                   Grid.Row="4"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left"/>
            <ToggleButton  Height="30"
                            Grid.Column="1"
                            Grid.Row="4"/>
        </Grid>
    </Grid>
</Page>
